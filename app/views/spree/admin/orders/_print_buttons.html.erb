<% if @order and @order.completed_at? %>
  <% buttons = Spree::PrintInvoice::Config[:print_buttons]
     buttons = buttons.split(",").collect{|b| b.strip }
     autoprint = Spree::PrintInvoice::Config[:autoprint]
     target = Spree::PrintInvoice::Config[:open_in_window]
  %>
  <%  buttons.each do |button| %>
    <li><%= button_link_to(t(button.to_s + "_print"), spree.admin_order_path(@order, :pdf , :template => button, :autoprint => autoprint), :target => target) %></li>
  <% end %>
<% end %>  
